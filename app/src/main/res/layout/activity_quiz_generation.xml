<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Generate AI Quiz"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- âœ… FILE PICKER SECTION -->
        <TextView
            android:id="@+id/tvFileOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Option 1: Upload File"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnChooseFile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="ðŸ“ Choose File"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvFileOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnClearFile"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearFile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="âœ• Clear"
            android:textSize="14sp"
            android:backgroundTint="#FF6B6B"
            app:layout_constraintTop_toBottomOf="@id/tvFileOption"
            app:layout_constraintStart_toEndOf="@id/btnChooseFile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvSelectedFile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnChooseFile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvSupportedFormats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Supported: TXT, PDF, DOCX"
            android:textSize="10sp"
            android:textColor="#999999"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedFile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- OR Divider -->
        <TextView
            android:id="@+id/tvOrDivider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/tvSupportedFormats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- âœ… URL INPUT SECTION -->
        <TextView
            android:id="@+id/tvUrlOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Option 2: Enter URL"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/tvOrDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTopic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter URL (e.g., https://example.com)"
            app:boxBackgroundMode="outline"
            app:layout_constraintTop_toBottomOf="@id/tvUrlOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Difficulty Spinner -->
        <TextView
            android:id="@+id/tvDifficultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty Level"
            android:textSize="14sp"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/tilTopic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/spinnerDifficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/difficulty_levels"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            app:layout_constraintTop_toBottomOf="@id/tvDifficultyLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Question Count Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilQuestionCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number of Questions (1-100)"
            app:boxBackgroundMode="outline"
            app:layout_constraintTop_toBottomOf="@id/spinnerDifficulty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etQuestionCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="10"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tilQuestionCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Progress Info Text -->
        <TextView
            android:id="@+id/tvQuestionCountInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGenerateQuiz"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Generate Quiz with AI"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvQuestionCountInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Info Text -->
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AI will generate personalized quiz questions based on your content and difficulty level."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnGenerateQuiz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>